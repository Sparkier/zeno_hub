{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"DisplayType": {
			"const": "table",
			"type": "string"
		},
		"Image": {
			"additionalProperties": false,
			"properties": {
				"maxWidth": {
					"enum": ["small", "medium", "large", "full"],
					"type": "string"
				},
				"type": {
					"const": "image",
					"type": "string"
				}
			},
			"required": ["type"],
			"type": "object"
		},
		"List": {
			"additionalProperties": false,
			"properties": {
				"border": {
					"type": "boolean"
				},
				"collapsible": {
					"type": "string"
				},
				"elements": {
					"$ref": "#/definitions/ViewUnion"
				},
				"horizontal": {
					"type": "boolean"
				},
				"pad": {
					"type": "boolean"
				},
				"type": {
					"const": "list",
					"type": "string"
				}
			},
			"required": ["elements", "type"],
			"type": "object"
		},
		"Message": {
			"additionalProperties": false,
			"properties": {
				"content": {
					"$ref": "#/definitions/ViewUnion"
				},
				"highlight": {
					"type": "boolean"
				},
				"ownMessage": {
					"type": "boolean"
				},
				"plain": {
					"type": "boolean"
				},
				"role": {
					"type": "string"
				},
				"type": {
					"const": "message",
					"type": "string"
				}
			},
			"required": ["content", "type"],
			"type": "object"
		},
		"SeparatedValues": {
			"additionalProperties": false,
			"properties": {
				"header": {
					"type": "string"
				},
				"highlight": {
					"type": "boolean"
				},
				"separator": {
					"type": "string"
				},
				"type": {
					"const": "separatedValues",
					"type": "string"
				}
			},
			"required": ["type"],
			"type": "object"
		},
		"Text": {
			"additionalProperties": false,
			"properties": {
				"label": {
					"type": "string"
				},
				"type": {
					"const": "text",
					"type": "string"
				}
			},
			"required": ["type"],
			"type": "object"
		},
		"VStack": {
			"additionalProperties": false,
			"properties": {
				"border": {
					"type": "boolean"
				},
				"collapsible": {
					"type": "string"
				},
				"keys": {
					"additionalProperties": {
						"$ref": "#/definitions/ViewUnion"
					},
					"type": "object"
				},
				"pad": {
					"type": "boolean"
				},
				"type": {
					"const": "vstack",
					"type": "string"
				}
			},
			"required": ["keys", "type"],
			"type": "object"
		},
		"View": {
			"additionalProperties": false,
			"properties": {
				"type": {
					"$ref": "#/definitions/ViewType"
				}
			},
			"required": ["type"],
			"type": "object"
		},
		"ViewSchema": {
			"additionalProperties": false,
			"properties": {
				"data": {
					"$ref": "#/definitions/ViewUnion"
				},
				"displayType": {
					"$ref": "#/definitions/DisplayType"
				},
				"label": {
					"$ref": "#/definitions/ViewUnion"
				},
				"output": {
					"$ref": "#/definitions/ViewUnion"
				},
				"size": {
					"enum": ["medium", "large"],
					"type": "string"
				}
			},
			"required": ["data"],
			"type": "object"
		},
		"ViewType": {
			"enum": [
				"text",
				"image",
				"audio",
				"code",
				"markdown",
				"3D",
				"list",
				"vstack",
				"message",
				"separatedValues"
			],
			"type": "string"
		},
		"ViewUnion": {
			"anyOf": [
				{
					"$ref": "#/definitions/View"
				},
				{
					"$ref": "#/definitions/Text"
				},
				{
					"$ref": "#/definitions/Image"
				},
				{
					"$ref": "#/definitions/List"
				},
				{
					"$ref": "#/definitions/Message"
				},
				{
					"$ref": "#/definitions/VStack"
				},
				{
					"$ref": "#/definitions/SeparatedValues"
				}
			]
		}
	}
}
